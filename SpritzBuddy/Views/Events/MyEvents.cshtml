@model IEnumerable<SpritzBuddy.Models.GroupEvent>
@{
    ViewData["Title"] = "My Events";
    var currentUserId = ViewBag.CurrentUserId;
    var upcomingEvents = Model.Where(e => e.EventDate > DateTime.Now).ToList();
    var pastEvents = Model.Where(e => e.EventDate <= DateTime.Now).ToList();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="bi bi-calendar-check-fill"></i> Evenimentele Mele</h2>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-calendar-x" style="font-size: 3rem;"></i>
            <h4 class="mt-3">Nu participi la niciun eveniment</h4>
            <p>Când vei fi membru într-un grup ?i vei avea evenimente, le vei vedea aici.</p>
            <a asp-controller="Groups" asp-action="Index" class="btn btn-primary mt-2">
                <i class="bi bi-search"></i> Exploreaz? Grupuri
            </a>
        </div>
    }
    else
    {
        <!-- Upcoming Events -->
        @if (upcomingEvents.Any())
        {
            <div class="mb-4">
                <h3 class="mb-3"><i class="bi bi-calendar-event text-primary"></i> Evenimente Viitoare (@upcomingEvents.Count)</h3>
                <div class="row">
                    @foreach (var evt in upcomingEvents)
                    {
                        var userResponse = evt.Participants?.FirstOrDefault(p => p.UserId == currentUserId);
                        var timeUntil = evt.EventDate - DateTime.Now;
                        var isUrgent = timeUntil.TotalDays <= 1;
                        
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="card h-100 @(isUrgent ? "border-danger border-2" : "border-primary")">
                                <div class="card-header @(isUrgent ? "bg-danger text-white" : "bg-primary text-white")">
                                    <h5 class="card-title mb-0">
                                        @if (isUrgent)
                                        {
                                            <i class="bi bi-exclamation-triangle-fill"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-calendar-event"></i>
                                        }
                                        @evt.Title
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">@(evt.Description.Length > 80 ? evt.Description.Substring(0, 80) + "..." : evt.Description)</p>
                                    
                                    <div class="mb-2">
                                        <i class="bi bi-clock-fill @(isUrgent ? "text-danger" : "text-primary")"></i>
                                        <strong>@evt.EventDate.ToString("dd MMM yyyy, HH:mm")</strong>
                                    </div>
                                    
                                    @if (isUrgent)
                                    {
                                        <div class="alert alert-danger py-1 px-2 mb-2">
                                            <small>
                                                <i class="bi bi-hourglass-split"></i>
                                                @if (timeUntil.TotalHours < 1)
                                                {
                                                    <strong>ÎN CURÂND!</strong>
                                                }
                                                else if (timeUntil.TotalHours < 24)
                                                {
                                                    <text>Peste <strong>@((int)timeUntil.TotalHours) ore</strong></text>
                                                }
                                                else
                                                {
                                                    <strong>MÂINE</strong>
                                                }
                                            </small>
                                        </div>
                                    }
                                    
                                    @if (!string.IsNullOrEmpty(evt.Location))
                                    {
                                        <div class="mb-2">
                                            <i class="bi bi-geo-alt-fill text-danger"></i>
                                            <small>@evt.Location</small>
                                        </div>
                                    }
                                    
                                    <div class="mb-2">
                                        <i class="bi bi-people-fill text-info"></i>
                                        <small>
                                            <a asp-controller="Groups" asp-action="Details" asp-route-id="@evt.GroupId" class="text-decoration-none">
                                                @evt.Group?.Name
                                            </a>
                                        </small>
                                    </div>

                                    @if (userResponse != null)
                                    {
                                        <div class="mb-2">
                                            <strong>Status:</strong>
                                            @switch (userResponse.Status)
                                            {
                                                case EventParticipationStatus.Going:
                                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Vin</span>
                                                    break;
                                                case EventParticipationStatus.Maybe:
                                                    <span class="badge bg-warning"><i class="bi bi-question-circle"></i> Poate</span>
                                                    break;
                                                case EventParticipationStatus.NotGoing:
                                                    <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Nu vin</span>
                                                    break;
                                            }
                                        </div>
                                    }

                                    <hr />

                                    <div class="d-flex justify-content-around text-center mb-2">
                                        <div>
                                            <span class="badge bg-success" style="font-size: 0.9em;">
                                                <i class="bi bi-check-circle"></i> @(evt.Participants?.Count(p => p.Status == EventParticipationStatus.Going) ?? 0)
                                            </span>
                                            <small class="d-block text-muted">Vin</small>
                                        </div>
                                        <div>
                                            <span class="badge bg-warning" style="font-size: 0.9em;">
                                                <i class="bi bi-question-circle"></i> @(evt.Participants?.Count(p => p.Status == EventParticipationStatus.Maybe) ?? 0)
                                            </span>
                                            <small class="d-block text-muted">Poate</small>
                                        </div>
                                        <div>
                                            <span class="badge bg-danger" style="font-size: 0.9em;">
                                                <i class="bi bi-x-circle"></i> @(evt.Participants?.Count(p => p.Status == EventParticipationStatus.NotGoing) ?? 0)
                                            </span>
                                            <small class="d-block text-muted">Nu vin</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <a asp-controller="Events" asp-action="Details" asp-route-id="@evt.Id" class="btn btn-primary btn-sm w-100">
                                        <i class="bi bi-eye"></i> Vezi Detalii
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Past Events -->
        @if (pastEvents.Any())
        {
            <div class="mb-4">
                <h3 class="mb-3"><i class="bi bi-calendar-x text-secondary"></i> Evenimente Trecute (@pastEvents.Count)</h3>
                <div class="row">
                    @foreach (var evt in pastEvents.OrderByDescending(e => e.EventDate).Take(6))
                    {
                        var userResponse = evt.Participants?.FirstOrDefault(p => p.UserId == currentUserId);
                        
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="card h-100 border-secondary">
                                <div class="card-header bg-secondary text-white">
                                    <h6 class="card-title mb-0">
                                        <i class="bi bi-calendar-x"></i> @evt.Title
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <p class="card-text text-muted"><small>@(evt.Description.Length > 60 ? evt.Description.Substring(0, 60) + "..." : evt.Description)</small></p>
                                    
                                    <div class="mb-2">
                                        <i class="bi bi-clock text-secondary"></i>
                                        <small>@evt.EventDate.ToString("dd MMM yyyy, HH:mm")</small>
                                    </div>
                                    
                                    <div class="mb-2">
                                        <i class="bi bi-people text-secondary"></i>
                                        <small>
                                            <a asp-controller="Groups" asp-action="Details" asp-route-id="@evt.GroupId" class="text-decoration-none">
                                                @evt.Group?.Name
                                            </a>
                                        </small>
                                    </div>

                                    @if (userResponse != null)
                                    {
                                        <div class="mb-2">
                                            <small><strong>Ai r?spuns:</strong></small>
                                            @switch (userResponse.Status)
                                            {
                                                case EventParticipationStatus.Going:
                                                    <span class="badge bg-success">Vin</span>
                                                    break;
                                                case EventParticipationStatus.Maybe:
                                                    <span class="badge bg-warning">Poate</span>
                                                    break;
                                                case EventParticipationStatus.NotGoing:
                                                    <span class="badge bg-danger">Nu vin</span>
                                                    break;
                                            }
                                        </div>
                                    }

                                    <small class="text-muted">
                                        <i class="bi bi-people-fill"></i>
                                        @(evt.Participants?.Count(p => p.Status == EventParticipationStatus.Going) ?? 0) au venit
                                    </small>
                                </div>
                                <div class="card-footer">
                                    <a asp-controller="Events" asp-action="Details" asp-route-id="@evt.Id" class="btn btn-outline-secondary btn-sm w-100">
                                        <i class="bi bi-eye"></i> Vezi Detalii
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                
                @if (pastEvents.Count > 6)
                {
                    <p class="text-center text-muted">
                        <small>Afi?ate @Math.Min(6, pastEvents.Count) din @pastEvents.Count evenimente trecute</small>
                    </p>
                }
            </div>
        }
    }

    <div class="text-center mt-4">
        <a asp-controller="Groups" asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Înapoi la Grupuri
        </a>
    </div>
</div>

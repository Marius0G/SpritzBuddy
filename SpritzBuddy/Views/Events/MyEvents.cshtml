@using SpritzBuddy.Models
@model IEnumerable<SpritzBuddy.Models.Event>

@{
    ViewData["Title"] = "My Events";
}

<div class="container mt-4">
    <h2><i class="bi bi-calendar-check"></i> Evenimentele Mele</h2>
    <p class="text-muted">Toate evenimentele din grupurile tale.</p>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Nu există evenimente programate în grupurile tale momentan.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var evt in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title text-truncate">@evt.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                <i class="bi bi-calendar"></i> @evt.EventDate.ToString("MMM dd, HH:mm")
                            </h6>
                            <p class="card-text small text-muted text-truncate">@evt.Description</p>
                            
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="badge bg-secondary">@evt.Participants.Count participanți</span>
                                <small>Grup: <a asp-controller="Groups" asp-action="Details" asp-route-id="@evt.GroupId">@evt.Group?.Name</a></small>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <a asp-action="Details" asp-route-id="@evt.Id" class="btn btn-primary btn-sm w-100">Vezi Detalii</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
@using SpritzBuddy.Models
@model SpritzBuddy.Models.Event

@{
    ViewData["Title"] = "Event Details";
    var currentUserId = (int)ViewBag.CurrentUserId;
    var myParticipation = Model.Participants.FirstOrDefault(p => p.UserId == currentUserId);
    var myStatus = myParticipation?.Status;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Groups" asp-action="Index">Grupuri</a></li>
            <li class="breadcrumb-item"><a asp-controller="Groups" asp-action="Details" asp-route-id="@Model.GroupId">@Model.Group.Name</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h2 class="card-title">@Model.Title</h2>
                    <h6 class="card-subtitle mb-2 text-muted">
                        <i class="bi bi-calendar-event"></i> @Model.EventDate.ToString("f")
                        @if (!string.IsNullOrEmpty(Model.Location))
                        {
                            <span class="ms-3"><i class="bi bi-geo-alt"></i> @Model.Location</span>
                        }
                    </h6>
                </div>
                
                @if (Model.OrganizerId == currentUserId || Model.Group.ModeratorId == currentUserId)
                {
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Sigur vrei să ștergi acest eveniment?');">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Șterge Eveniment
                        </button>
                    </form>
                }
            </div>
            
            <p class="card-text mt-3">@Model.Description</p>
            
            <div class="mt-2">
                <small class="text-muted">Creat de: <strong>@Model.Organizer?.UserName</strong></small>
            </div>
        </div>
        
        <div class="card-footer bg-light">
            <h5>Răspunsul tău:</h5>
            <div class="btn-group" role="group">
                <button type="button" class="btn @(myStatus == EventParticipantStatus.Going ? "btn-success" : "btn-outline-success")" onclick="respondToEvent(@Model.Id, 'Going')">
                    <i class="bi bi-check-circle"></i> Vin
                </button>
                <button type="button" class="btn @(myStatus == EventParticipantStatus.Maybe ? "btn-warning" : "btn-outline-warning")" onclick="respondToEvent(@Model.Id, 'Maybe')">
                    <i class="bi bi-question-circle"></i> Poate
                </button>
                <button type="button" class="btn @(myStatus == EventParticipantStatus.NotGoing ? "btn-danger" : "btn-outline-danger")" onclick="respondToEvent(@Model.Id, 'NotGoing')">
                    <i class="bi bi-x-circle"></i> Nu vin
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <i class="bi bi-check-circle"></i> Vin (@Model.Participants.Count(p => p.Status == EventParticipantStatus.Going))
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var p in Model.Participants.Where(p => p.Status == EventParticipantStatus.Going))
                    {
                        <li class="list-group-item d-flex align-items-center">
                            <img src="@(p.User.ProfilePictureUrl ?? "/uploads/profiles/default.png")" class="rounded-circle me-2" style="width:24px;height:24px;" />
                            @p.User.UserName
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <i class="bi bi-question-circle"></i> Poate (@Model.Participants.Count(p => p.Status == EventParticipantStatus.Maybe))
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var p in Model.Participants.Where(p => p.Status == EventParticipantStatus.Maybe))
                    {
                        <li class="list-group-item d-flex align-items-center">
                            <img src="@(p.User.ProfilePictureUrl ?? "/uploads/profiles/default.png")" class="rounded-circle me-2" style="width:24px;height:24px;" />
                            @p.User.UserName
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <i class="bi bi-x-circle"></i> Nu vin (@Model.Participants.Count(p => p.Status == EventParticipantStatus.NotGoing))
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var p in Model.Participants.Where(p => p.Status == EventParticipantStatus.NotGoing))
                    {
                        <li class="list-group-item d-flex align-items-center">
                            <img src="@(p.User.ProfilePictureUrl ?? "/uploads/profiles/default.png")" class="rounded-circle me-2" style="width:24px;height:24px;" />
                            @p.User.UserName
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function respondToEvent(eventId, status) {
            $.post('/Events/RespondToEvent', { eventId: eventId, status: status, __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() })
                .done(function (data) {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                });
        }
    </script>
}
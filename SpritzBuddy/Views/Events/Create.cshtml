@model SpritzBuddy.Models.Event
@{
    ViewData["Title"] = "Create Event";
    var groupId = ViewBag.GroupId;
    var groupName = ViewBag.GroupName;
    
    var titleValue = ViewBag.TitleValue as string ?? "";
    var descriptionValue = ViewBag.DescriptionValue as string ?? "";
    var eventDateValue = ViewBag.EventDateValue as DateTime?;
    var locationValue = ViewBag.LocationValue as string ?? "";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-calendar-plus"></i> CreeazÄƒ Eveniment
                    </h3>
                    <small>Grup: @groupName</small>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i> 
                            <strong>localhost says:</strong> You need to be nice! ðŸ¤¬<br/>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @ViewBag.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="groupId" value="@groupId" />
                        
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-card-heading"></i> Titlu Eveniment *
                            </label>
                            <input name="title" 
                                   class="form-control" 
                                   value="@titleValue"
                                   required 
                                   maxlength="150"
                                   placeholder="Ex: IeÈ™ire la terasa" />
                            <small class="text-muted">Maxim 150 caractere</small>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-text-paragraph"></i> Descriere *
                            </label>
                            <textarea name="description" 
                                      class="form-control" 
                                      rows="4" 
                                      required
                                      maxlength="1000"
                                      placeholder="Detalii despre eveniment...">@descriptionValue</textarea>
                            <small class="text-muted">Maxim 1000 caractere</small>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <i class="bi bi-calendar3"></i> Data È™i Ora *
                                </label>
                                <input name="eventDate" 
                                       type="datetime-local" 
                                       class="form-control" 
                                       value="@(eventDateValue.HasValue ? eventDateValue.Value.ToString("yyyy-MM-ddTHH:mm") : "")"
                                       required />
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <i class="bi bi-geo-alt"></i> LocaÈ›ie (opÈ›ional)
                                </label>
                                <input name="location" 
                                       class="form-control"
                                       value="@locationValue"
                                       maxlength="250"
                                       placeholder="Ex: Terasa Central" />
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> 
                            Toate cÃ¢mpurile marcate cu * sunt obligatorii.
                        </div>

                        <div class="d-flex justify-content-between gap-3">
                            <a asp-controller="Groups" asp-action="Details" asp-route-id="@groupId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> ÃŽnapoi la Grup
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> CreeazÄƒ Eveniment
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Set minimum date to now
        document.querySelector('input[name="eventDate"]').min = new Date().toISOString().slice(0, 16);
    </script>
}
@model SpritzBuddy.Models.Event
@{
    ViewData["Title"] = "Create Event";
    var groupId = ViewBag.GroupId;
    var groupName = ViewBag.GroupName;
}

<div class="container mt-4">
    <h2>Creează eveniment pentru grupul: @groupName</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                <input type="hidden" name="groupId" value="@groupId" />
                
                <div class="mb-3">
                    <label class="form-label">Titlu</label>
                    <input name="title" class="form-control" required />
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Descriere</label>
                    <textarea name="description" class="form-control" rows="3" required></textarea>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Data și Ora</label>
                    <input name="eventDate" type="datetime-local" class="form-control" required />
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Locație (opțional)</label>
                    <input name="location" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary">Creează Eveniment</button>
                <a asp-controller="Groups" asp-action="Details" asp-route-id="@groupId" class="btn btn-secondary">Înapoi la Grup</a>
            </form>
        </div>
    </div>
</div>
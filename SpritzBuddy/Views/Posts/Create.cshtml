@model SpritzBuddy.Models.ViewModels.CreatePostViewModel

@{
    ViewData["Title"] = "Create Post";
}

<h2>Create New Post</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SelectedDrinkIds" class="control-label">Ce bem azi? 🍹</label>
                <select asp-for="SelectedDrinkIds" 
                        asp-items="Model.AvailableDrinks" 
                        class="form-control" 
                        multiple
                        size="5">
                </select>
                <small class="form-text text-muted">
                    Hold Ctrl (Windows) or Cmd (Mac) to select multiple drinks
                </small>
                <span asp-validation-for="SelectedDrinkIds" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">
                    <i class="bi bi-image"></i> Imagini/Video (max 5 fișiere, max 50MB per fișier)
                </label>
                <input type="file" 
                       name="MediaFiles" 
                       class="form-control" 
                       multiple 
                       accept="image/*,video/mp4,video/quicktime,video/x-msvideo,video/webm"
                       id="media-input" />
                <small class="text-muted">
                    Formate acceptate: JPG, PNG, GIF, WebP pentru imagini | MP4, MOV, AVI, WebM pentru video
                </small>
            </div>

            <!-- Image Preview Container -->
            <div id="image-preview" class="row mb-3"></div>

            <div class="form-group">
                <div class="d-flex justify-content-between align-items-center gap-2">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Înapoi
                    </a>
                    <button type="submit" 
                            id="submit-post-btn" 
                            class="btn btn-success btn-lg">
                        <span class="submit-text">
                            <i class="bi bi-check-circle"></i> Creează Post
                        </span>
                        <span class="spinner-border spinner-border-sm d-none" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<partial name="_ValidationScriptsPartial" />
</div>
</div>
</div>

@section Scripts {
    <script>
        function previewImages(event) {
            const files = event.target.files;
            const previewContainer = document.getElementById('image-preview');
            previewContainer.innerHTML = ''; // Clear previous previews

            if (files.length > 5) {
                alert('You can only upload up to 5 images');
                event.target.value = '';
                return;
            }

            Array.from(files).forEach((file, index) => {
                if (file.size > 10 * 1024 * 1024) {
                    alert(`File ${file.name} is too large. Maximum size is 10MB.`);
                    return;
                }

                if (!file.type.startsWith('image/')) {
                    alert(`File ${file.name} is not an image.`);
                    return;
                }

                const reader = new FileReader();
                reader.onload = function(e) {
                    const col = document.createElement('div');
                    col.className = 'col-md-3 col-sm-4 col-6 mb-3';
                    
                    const imgContainer = document.createElement('div');
                    imgContainer.className = 'position-relative';
                    
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.className = 'img-thumbnail';
                    img.style.width = '100%';
                    img.style.height = '150px';
                    img.style.objectFit = 'cover';
                    
                    imgContainer.appendChild(img);
                    col.appendChild(imgContainer);
                    previewContainer.appendChild(col);
                };
                reader.readAsDataURL(file);
            });
        }

        // Show loading state on form submit
        document.querySelector('form').addEventListener('submit', function() {
            const btn = document.getElementById('submit-post-btn');
            const text = btn.querySelector('.submit-text');
            const spinner = btn.querySelector('.spinner-border');
            
            btn.disabled = true;
            text.classList.add('d-none');
            spinner.classList.remove('d-none');
        });
    </script>
}

@model IEnumerable<SpritzBuddy.Models.GroupEvent>
@{
    ViewData["Title"] = "Group Events";
    var groupId = ViewBag.GroupId;
    var groupName = ViewBag.GroupName;
    var currentUserId = ViewBag.CurrentUserId;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold"><i class="bi bi-calendar-event-fill"></i> Evenimente în @groupName</h2>
            <a asp-action="Details" asp-route-id="@groupId" class="text-decoration-none">
                <i class="bi bi-arrow-left"></i> Înapoi la grup
            </a>
        </div>
        <a asp-action="CreateEvent" asp-route-groupId="@groupId" class="btn btn-success">
            <i class="bi bi-calendar-plus"></i> Creeaz? Eveniment Nou
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <h4><i class="bi bi-calendar-x"></i> Nu exist? evenimente</h4>
                    <p>Fii primul care creeaz? un eveniment pentru acest grup!</p>
                    <a asp-action="CreateEvent" asp-route-groupId="@groupId" class="btn btn-primary">
                        <i class="bi bi-calendar-plus"></i> Creeaz? Primul Eveniment
                    </a>
                </div>
            </div>
        }
        else
        {
            @foreach (var evt in Model)
            {
                var isUpcoming = evt.EventDate > DateTime.Now;
                var goingCount = evt.Participants?.Count(p => p.Status == EventParticipationStatus.Going) ?? 0;
                var maybeCount = evt.Participants?.Count(p => p.Status == EventParticipationStatus.Maybe) ?? 0;
                var notGoingCount = evt.Participants?.Count(p => p.Status == EventParticipationStatus.NotGoing) ?? 0;
                
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm @(isUpcoming ? "border-primary" : "border-secondary")">
                        <div class="card-header @(isUpcoming ? "bg-primary text-white" : "bg-secondary text-white")">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-calendar-event"></i> @evt.Title
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@(evt.Description.Length > 100 ? evt.Description.Substring(0, 100) + "..." : evt.Description)</p>
                            
                            <div class="mb-2">
                                <i class="bi bi-clock-fill text-primary"></i>
                                <strong>@evt.EventDate.ToString("dd MMM yyyy, HH:mm")</strong>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(evt.Location))
                            {
                                <div class="mb-2">
                                    <i class="bi bi-geo-alt-fill text-danger"></i>
                                    @evt.Location
                                </div>
                            }
                            
                            <div class="mb-2">
                                <i class="bi bi-person-fill text-info"></i>
                                <small>Creat de @evt.Creator?.UserName</small>
                            </div>

                            <hr />

                            <div class="d-flex justify-content-around text-center">
                                <div>
                                    <span class="badge bg-success" style="font-size: 1em;">
                                        <i class="bi bi-check-circle"></i> @goingCount
                                    </span>
                                    <small class="d-block text-muted">Vin</small>
                                </div>
                                <div>
                                    <span class="badge bg-warning" style="font-size: 1em;">
                                        <i class="bi bi-question-circle"></i> @maybeCount
                                    </span>
                                    <small class="d-block text-muted">Poate</small>
                                </div>
                                <div>
                                    <span class="badge bg-danger" style="font-size: 1em;">
                                        <i class="bi bi-x-circle"></i> @notGoingCount
                                    </span>
                                    <small class="d-block text-muted">Nu vin</small>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a asp-action="EventDetails" asp-route-id="@evt.Id" class="btn btn-primary btn-sm w-100">
                                <i class="bi bi-eye"></i> Vezi Detalii
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

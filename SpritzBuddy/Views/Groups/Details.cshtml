@model SpritzBuddy.Models.ViewModels.GroupDetailsViewModel
@using Microsoft.AspNetCore.Identity
@{
    var group = Model.Group;
    var currentUserId = Model.CurrentUserId;
}
<div class="container mt-4">
    <div class="row">
        <!-- Left Column: Info & Members -->
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h3 class="fw-bold">@group.Name</h3>
                    <span class="text-muted">Moderator: @group.Moderator?.UserName</span>
                </div>
                <div class="card-body">
                    <p>@group.Description</p>
                    <div class="mb-3">
                        @if (!Model.IsMember && !Model.IsPending)
                        {
                            <form asp-action="Join" method="post">
                                <input type="hidden" name="id" value="@group.Id" />
                                <button type="submit" class="btn btn-success w-100">Join Group</button>
                            </form>
                        }
                        else if (Model.IsPending)
                        {
                            <span class="badge bg-warning w-100">Request Sent</span>
                        }
                        else if (Model.IsMember)
                        {
                            <form asp-action="Leave" method="post">
                                <input type="hidden" name="id" value="@group.Id" />
                                <button type="submit" class="btn btn-outline-danger w-100">Leave Group</button>
                            </form>
                        }
                        @if (Model.IsModerator)
                        {
                            <form asp-action="Delete" method="post" class="mt-2">
                                <input type="hidden" name="groupId" value="@group.Id" />
                                <button type="submit" class="btn btn-danger w-100">Delete Group</button>
                            </form>
                        }
                    </div>
                    <h5 class="fw-bold mt-4">Members (@(group.Members?.Count ?? 0))</h5>
                    <ul class="list-group mb-3">
                        @foreach (var m in group.Members?.Where(x => x.IsAccepted) ?? Enumerable.Empty<UserGroup>())
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @m.User?.UserName
                                @if (Model.IsModerator && m.UserId != group.ModeratorId)
                                {
                                    <form asp-action="Kick" method="post" class="d-inline">
                                        <input type="hidden" name="groupId" value="@group.Id" />
                                        <input type="hidden" name="userId" value="@m.UserId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger ms-2" title="Kick"><i class="bi bi-x"></i></button>
                                    </form>
                                }
                            </li>
                        }
                    </ul>
                    @if (Model.IsModerator)
                    {
                        <h6 class="fw-bold">Pending Requests</h6>
                        <ul class="list-group">
                            @foreach (var m in group.Members?.Where(x => !x.IsAccepted) ?? Enumerable.Empty<UserGroup>())
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @m.User?.UserName
                                    <div>
                                        <form asp-action="Accept" method="post" class="d-inline">
                                            <input type="hidden" name="groupId" value="@group.Id" />
                                            <input type="hidden" name="userId" value="@m.UserId" />
                                            <button type="submit" class="btn btn-sm btn-success me-1">Accept</button>
                                        </form>
                                        <form asp-action="Decline" method="post" class="d-inline">
                                            <input type="hidden" name="groupId" value="@group.Id" />
                                            <input type="hidden" name="userId" value="@m.UserId" />
                                            <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                                        </form>
                                    </div>
                                </li>
                            }
                        </ul>

                        <h6 class="fw-bold mt-4">Invite Users</h6>
                        <div class="mb-3">
                            <input type="text" id="userSearchInput" class="form-control" placeholder="Caută utilizatori după username..." autocomplete="off" />
                            <div id="searchResults" class="list-group mt-2" style="display: none; max-height: 200px; overflow-y: auto;"></div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- Right Column: Chat -->
        <div class="col-md-8">
            @if (Model.IsMember || Model.IsModerator)
            {
                <div class="card shadow-sm mb-4" style="height: 500px; overflow-y: auto;">
                    <div class="card-header bg-white fw-bold">Group Chat</div>
                    <div class="card-body p-3" style="height: 370px; overflow-y: auto;">
                        @foreach (var msg in group.Messages ?? Enumerable.Empty<GroupMessage>())
                        {
                            var isMine = msg.UserId.ToString() == currentUserId;
                            <div class="d-flex mb-2 @(isMine ? "justify-content-end" : "justify-content-start")">
                                <div class="p-2 rounded shadow-sm" style="max-width: 70%; background: @(isMine ? "#e3f2fd" : "#f8f9fa");">
                                    <div class="d-flex align-items-center mb-1">
                                        <span class="fw-bold me-2">@msg.User?.UserName</span>
                                        <small class="text-muted">@msg.SentDate.ToShortTimeString()</small>
                                        @if (Model.IsModerator || isMine)
                                        {
                                            <form asp-action="DeleteMessage" method="post" class="ms-2 d-inline">
                                                <input type="hidden" name="id" value="@msg.Id" />
                                                <button type="submit" class="btn btn-sm btn-link text-danger p-0" title="Delete"><i class="bi bi-trash"></i></button>
                                            </form>
                                        }
                                    </div>
                                    <div>@msg.Content</div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-white">
                        <form asp-action="PostMessage" method="post" class="d-flex">
                            <input type="hidden" name="groupId" value="@group.Id" />
                            <input type="text" name="content" class="form-control me-2" placeholder="Scrie un mesaj..." autocomplete="off" />
                            <button type="submit" class="btn btn-primary">Send</button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info mt-4">Doar membrii grupului pot vedea și trimite mesaje.</div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let searchTimeout;
        const groupId = @group.Id;
        const searchInput = document.getElementById('userSearchInput');
        const searchResults = document.getElementById('searchResults');

        if (searchInput) {
            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                const query = this.value.trim();

                if (query.length < 2) {
                    searchResults.style.display = 'none';
                    searchResults.innerHTML = '';
                    return;
                }

                searchTimeout = setTimeout(async () => {
                    try {
                        const response = await fetch(`/Groups/SearchUsers?query=${encodeURIComponent(query)}&groupId=${groupId}`);
                        const users = await response.json();

                        if (users.length === 0) {
                            searchResults.innerHTML = '<div class="list-group-item text-muted">Nu s-au găsit utilizatori</div>';
                            searchResults.style.display = 'block';
                            return;
                        }

                        searchResults.innerHTML = users.map(user => `
                            <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    ${user.profilePicture 
                                        ? `<img src="${user.profilePicture}" alt="${user.username}" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;">` 
                                        : '<div class="rounded-circle me-2 bg-secondary d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;"><i class="bi bi-person-fill text-white"></i></div>'}
                                    <div>
                                        <div class="fw-bold">${user.username}</div>
                                        <small class="text-muted">${user.fullName}</small>
                                    </div>
                                </div>
                                <button class="btn btn-sm btn-primary" onclick="sendInvite(${user.id}, '${user.username}')">
                                    <i class="bi bi-envelope-plus"></i> Invită
                                </button>
                            </div>
                        `).join('');
                        searchResults.style.display = 'block';
                    } catch (error) {
                        console.error('Error searching users:', error);
                        searchResults.innerHTML = '<div class="list-group-item text-danger">Eroare la căutare</div>';
                        searchResults.style.display = 'block';
                    }
                }, 300);
            });

            // Close search results when clicking outside
            document.addEventListener('click', function(e) {
                if (!searchInput.contains(e.target) && !searchResults.contains(e.target)) {
                    searchResults.style.display = 'none';
                }
            });
        }

        async function sendInvite(userId, username) {
            if (!confirm(`Trimite invitație lui ${username}?`)) {
                return;
            }

            try {
                const formData = new FormData();
                formData.append('groupId', groupId);
                formData.append('userId', userId);

                // Get antiforgery token
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                formData.append('__RequestVerificationToken', token);

                const response = await fetch('/Groups/SendInvite', {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    alert(`Invitație trimisă cu succes lui ${username}!`);
                    searchInput.value = '';
                    searchResults.style.display = 'none';
                    searchResults.innerHTML = '';
                } else {
                    alert('Eroare la trimiterea invitației. Te rog încearcă din nou.');
                }
            } catch (error) {
                console.error('Error sending invite:', error);
                alert('Eroare la trimiterea invitației.');
            }
        }
    </script>
}

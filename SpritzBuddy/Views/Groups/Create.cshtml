@model SpritzBuddy.Models.ViewModels.CreateGroupViewModel
@{
    ViewData["Title"] = "ÃŽnfiinÈ›eazÄƒ un Grup Nou ðŸ¥‚";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm rounded">
                <div class="card-header bg-white text-center">
                    <h3 class="fw-bold">ÃŽnfiinÈ›eazÄƒ un Grup Nou ðŸ¥‚</h3>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i> 
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            @ViewBag.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">
                                <i class="bi bi-people"></i> Nume Grup *
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Ex: IeÈ™iri Vineri Seara" required maxlength="100" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <small class="text-muted">Maxim 100 caractere</small>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="bi bi-text-paragraph"></i> Descriere *
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" required maxlength="500" placeholder="Descrie grupul tÄƒu..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <small class="text-muted">Maxim 500 caractere</small>
                        </div>
                        
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> 
                            Toate cÃ¢mpurile marcate cu * sunt obligatorii.
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> ÃŽnapoi
                            </a>
                            <button type="submit" 
                                    id="submit-group-btn"
                                    class="btn btn-success btn-lg">
                                <span class="submit-text">
                                    <i class="bi bi-check-circle"></i> CreeazÄƒ Grup
                                </span>
                                <span class="spinner-border spinner-border-sm d-none" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <partial name="_ValidationScriptsPartial" />
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Show loading state on form submit
        document.querySelector('form').addEventListener('submit', function() {
            const btn = document.getElementById('submit-group-btn');
            const text = btn.querySelector('.submit-text');
            const spinner = btn.querySelector('.spinner-border');
            
            btn.disabled = true;
            text.classList.add('d-none');
            spinner.classList.remove('d-none');
        });
    </script>
}

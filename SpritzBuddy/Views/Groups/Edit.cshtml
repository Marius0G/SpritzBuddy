@model SpritzBuddy.Models.Group

@{
    ViewData["Title"] = "Edit Group";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">
                        <i class="bi bi-pencil"></i> Editeaz? Grup
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i> 
                            <strong>localhost says:</strong> You need to be nice! ??<br/>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @ViewBag.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="mb-3">
                            <label for="name" class="form-label">
                                <i class="bi bi-people"></i> Nume Grup *
                            </label>
                            <input type="text" 
                                   class="form-control" 
                                   id="name" 
                                   name="name" 
                                   value="@Model.Name" 
                                   required 
                                   maxlength="100"
                                   placeholder="Ex: Prietenii din cartier" />
                            <small class="text-muted">Maxim 100 caractere</small>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">
                                <i class="bi bi-text-paragraph"></i> Descriere *
                            </label>
                            <textarea class="form-control" 
                                      id="description" 
                                      name="description" 
                                      rows="4" 
                                      required
                                      maxlength="500"
                                      placeholder="Descrie grupul t?u...">@Model.Description</textarea>
                            <small class="text-muted">Maxim 500 caractere</small>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> 
                            Toate câmpurile marcate cu * sunt obligatorii.
                        </div>

                        <div class="d-flex justify-content-between gap-3">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Anuleaz?
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Salveaz? Modific?rile
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

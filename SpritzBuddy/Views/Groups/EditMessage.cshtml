@model SpritzBuddy.Models.GroupMessage

@{
    ViewData["Title"] = "Edit Message";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h4>Edit Message</h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditMessage" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        
                        <div class="mb-3">
                            <label class="form-label">Message Content</label>
                            <textarea name="newContent" class="form-control" rows="4" required>@Model.Content</textarea>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.GroupId" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

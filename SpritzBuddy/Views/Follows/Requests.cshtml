@model IEnumerable<SpritzBuddy.Models.Follow>

@{
    ViewData["Title"] = "Follow Requests";
}

<div class="container mt-4">
    <h2>Follow Requests</h2>
    <p class="text-muted">People who want to follow you</p>

    @if (Model.Any())
    {
        <div class="list-group">
            @foreach (var request in Model)
            {
                <div class="list-group-item follow-request-item" data-follower-id="@request.FollowerId">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <!-- Profile Picture -->
                            @if (!string.IsNullOrEmpty(request.Follower.ProfilePictureUrl))
                            {
                                <img src="@request.Follower.ProfilePictureUrl" 
                                     class="rounded-circle me-3" 
                                     alt="Profile" 
                                     style="width: 50px; height: 50px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-3"
                                     style="width: 50px; height: 50px;">
                                    <span class="fw-bold">@request.Follower.FirstName.Substring(0, 1)@request.Follower.LastName.Substring(0, 1)</span>
                                </div>
                            }

                            <!-- User Info -->
                            <div>
                                <h6 class="mb-0">
                                    <a asp-controller="Profile" asp-action="Index" asp-route-username="@request.Follower.UserName">
                                        @request.Follower.FirstName @request.Follower.LastName
                                    </a>
                                </h6>
                                <small class="text-muted">@("@" + request.Follower.UserName)</small>
                                <br />
                                <small class="text-muted">Requested @request.RequestDate.ToString("MMM dd, yyyy")</small>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="btn-group request-actions">
                            <button type="button" class="btn btn-success btn-sm approve-btn" data-follower-id="@request.FollowerId">
                                <i class="bi bi-check-lg"></i> Accept
                            </button>
                            <button type="button" class="btn btn-danger btn-sm reject-btn" data-follower-id="@request.FollowerId">
                                <i class="bi bi-x-lg"></i> Reject
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <h4 class="mt-3">No pending requests</h4>
            <p>You don't have any follow requests at the moment.</p>
        </div>
    }

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
        <a asp-action="Followers" class="btn btn-primary">View Followers</a>
    </div>
</div>

@section Scripts {
    @Html.AntiForgeryToken()
    
    <script>
        $(document).ready(function() {
            // Handle approve button click
            $('.approve-btn').on('click', function() {
                var followerId = $(this).data('follower-id');
                approveRequest(followerId);
            });

            // Handle reject button click
            $('.reject-btn').on('click', function() {
                if (!confirm('Are you sure you want to reject this follow request?')) {
                    return;
                }
                var followerId = $(this).data('follower-id');
                rejectRequest(followerId);
            });
        });

        function approveRequest(followerId) {
            $.post('/Follows/Approve', {
                followerId: followerId,
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
            })
            .done(function(data) {
                if (data.success) {
                    // Remove the request item from the list
                    $('.follow-request-item[data-follower-id="' + followerId + '"]').fadeOut('slow', function() {
                        $(this).remove();
                        
                        // Check if there are no more requests
                        if ($('.follow-request-item').length === 0) {
                            location.reload();
                        }
                    });
                    
                    showSuccessMessage(data.message || 'Follow request approved');
                } else {
                    alert(data.message || 'Error approving request');
                }
            })
            .fail(function() {
                alert('Error occurred while approving request');
            });
        }

        function rejectRequest(followerId) {
            $.post('/Follows/Reject', {
                followerId: followerId,
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
            })
            .done(function(data) {
                if (data.success) {
                    // Remove the request item from the list
                    $('.follow-request-item[data-follower-id="' + followerId + '"]').fadeOut('slow', function() {
                        $(this).remove();
                        
                        // Check if there are no more requests
                        if ($('.follow-request-item').length === 0) {
                            location.reload();
                        }
                    });
                    
                    showSuccessMessage(data.message || 'Follow request rejected');
                } else {
                    alert(data.message || 'Error rejecting request');
                }
            })
            .fail(function() {
                alert('Error occurred while rejecting request');
            });
        }

        function showSuccessMessage(message) {
            var alertHtml = '<div class="alert alert-success alert-dismissible fade show mt-3" role="alert">' +
                            message +
                            '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
                            '</div>';
            
            $('h2').after(alertHtml);
            
            setTimeout(function() {
                $('.alert-success').fadeOut('slow', function() {
                    $(this).remove();
                });
            }, 3000);
        }
    </script>

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
}

@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SpritzBuddy</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SpritzBuddy.styles.css" asp-append-version="true" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <!-- Add anti-forgery token for AJAX requests -->
    @Html.AntiForgeryToken()
    
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SpritzBuddy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-fill"></i> Home
                            </a>
                        </li>
                        
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <!-- Posts Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="postsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-newspaper"></i> Posts
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="postsDropdown">
                                    <li><a class="dropdown-item" asp-controller="Posts" asp-action="Index"><i class="bi bi-globe"></i> All Posts</a></li>
                                    <li><a class="dropdown-item" asp-controller="Posts" asp-action="MyPosts"><i class="bi bi-person-badge"></i> My Posts</a></li>
                                    <li><a class="dropdown-item" asp-controller="Likes" asp-action="UserLikes"><i class="bi bi-heart-fill text-danger"></i> Liked Posts</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Posts" asp-action="Create"><i class="bi bi-plus-circle"></i> Create New Post</a></li>
                                </ul>
                            </li>
                            
                            <!-- Groups Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="groupsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-people-fill"></i> Groups
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="groupsDropdown">
                                    <li><a class="dropdown-item" asp-controller="Groups" asp-action="Index"><i class="bi bi-grid-3x3-gap"></i> All Groups</a></li>
                                    <li><a class="dropdown-item" asp-controller="Groups" asp-action="MyGroups"><i class="bi bi-collection"></i> My Groups</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Groups" asp-action="Create"><i class="bi bi-plus-circle"></i> Create New Group</a></li>
                                </ul>
                            </li>
                            
                            <!-- Search Users -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Search" asp-action="Index">
                                    <i class="bi bi-search"></i> Search Users
                                </a>
                            </li>
                            
                            <!-- Notifications -->
                            <li class="nav-item">
                                <a class="nav-link text-dark position-relative" asp-controller="Notifications" asp-action="Index">
                                    <i class="bi bi-bell-fill"></i> Notifications
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="total-notifications-badge" style="display: none;">
                                        0
                                    </span>
                                </a>
                            </li>
                        }
                        else
                        {
                            <!-- For non-authenticated users, just show All Posts and All Groups -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Posts" asp-action="Index">
                                    <i class="bi bi-newspaper"></i> Posts
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Groups" asp-action="Index">
                                    <i class="bi bi-people-fill"></i> Groups
                                </a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SpritzBuddy - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
        <script>
            // Load pending requests count for notification badge
            $(document).ready(function() {
                loadNotificationCount();
                
                // Refresh count every 30 seconds
                setInterval(loadNotificationCount, 30000);
            });
            
            function loadNotificationCount() {
                $.get('/Notifications/GetNotificationCount')
                    .done(function(data) {
                        if (data.count > 0) {
                            $('#total-notifications-badge').text(data.count).show();
                        } else {
                            $('#total-notifications-badge').hide();
                        }
                    })
                    .fail(function() {
                        $('#total-notifications-badge').hide();
                    });
            }
        </script>
    }
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SpritzBuddy</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SpritzBuddy.styles.css" asp-append-version="true" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <!-- Add anti-forgery token for AJAX requests -->
    @Html.AntiForgeryToken()
    
    <header>
        <nav class="navbar navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SpritzBuddy</a>
                
                <!-- Desktop Navigation - visible only on md and up -->
                <div class="d-none d-md-flex align-items-center">
                    <ul class="navbar-nav flex-row me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-fill"></i> Home
                            </a>
                        </li>
                        
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <!-- Groups Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="groupsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-people-fill"></i> Groups
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="groupsDropdown">
                                    <li><a class="dropdown-item" asp-controller="Groups" asp-action="Index"><i class="bi bi-grid-3x3-gap"></i> All Groups</a></li>
                                    <li><a class="dropdown-item" asp-controller="Groups" asp-action="MyGroups"><i class="bi bi-collection"></i> My Groups</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Events" asp-action="MyEvents"><i class="bi bi-calendar-check"></i> My Events</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Groups" asp-action="Create"><i class="bi bi-plus-circle"></i> Create New Group</a></li>
                                </ul>
                            </li>
                            
                            <!-- Search Users -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Search" asp-action="Index">
                                    <i class="bi bi-search"></i> Search
                                </a>
                            </li>
                        }
                        else
                        {
                            <!-- For non-authenticated users -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Groups" asp-action="Index">
                                    <i class="bi bi-people-fill"></i> Groups
                                </a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
                
                <!-- Mobile - show only logo, user menu handled by bottom nav -->
                <div class="d-md-none">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <span class="text-muted small">@User.Identity.Name</span>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SpritzBuddy - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- Mobile Bottom Navigation (Instagram Style) -->
        <nav class="mobile-bottom-nav d-md-none">
            <a asp-controller="Home" asp-action="Index" class="mobile-nav-item">
                <i class="bi bi-house-fill"></i>
                <span>Home</span>
            </a>
            <a asp-controller="Groups" asp-action="Index" class="mobile-nav-item">
                <i class="bi bi-people-fill"></i>
                <span>Groups</span>
            </a>
            <a asp-controller="Search" asp-action="Index" class="mobile-nav-item">
                <i class="bi bi-search"></i>
                <span>Search</span>
            </a>
            <a asp-controller="Profile" asp-action="Index" class="mobile-nav-item position-relative">
                <i class="bi bi-person-circle"></i>
                <span>Profile</span>
                <span class="position-absolute top-0 start-50 translate-middle badge rounded-pill bg-danger" id="mobile-notifications-badge" style="display: none; font-size: 0.6rem;">
                    0
                </span>
            </a>
        </nav>
    }
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
        <script>
            // Load pending requests count for notification badge on profile
            $(document).ready(function() {
                loadNotificationCount();
                
                // Refresh count every 30 seconds
                setInterval(loadNotificationCount, 30000);
                
                // Mark active page in mobile bottom nav
                markActiveMobileNav();
            });
            
            function loadNotificationCount() {
                $.get('/Notifications/GetNotificationCount')
                    .done(function(data) {
                        if (data.count > 0) {
                            $('#profile-notifications-badge').text(data.count).show();
                            $('#mobile-notifications-badge').text(data.count).show();
                        } else {
                            $('#profile-notifications-badge').hide();
                            $('#mobile-notifications-badge').hide();
                        }
                    })
                    .fail(function() {
                        $('#profile-notifications-badge').hide();
                        $('#mobile-notifications-badge').hide();
                    });
            }
            
            function markActiveMobileNav() {
                const currentPath = window.location.pathname.toLowerCase();
                $('.mobile-nav-item').removeClass('active');
                
                if (currentPath === '/' || currentPath.includes('/home')) {
                    $('.mobile-nav-item').eq(0).addClass('active');
                } else if (currentPath.includes('/groups')) {
                    $('.mobile-nav-item').eq(1).addClass('active');
                } else if (currentPath.includes('/search')) {
                    $('.mobile-nav-item').eq(2).addClass('active');
                } else if (currentPath.includes('/profile')) {
                    $('.mobile-nav-item').eq(3).addClass('active');
                }
            }
        </script>
    }
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

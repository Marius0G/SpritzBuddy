@using Microsoft.AspNetCore.Identity
@using SpritzBuddy.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav ms-auto">
@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    var username = user?.UserName ?? "User";
    
    <li class="nav-item">
        <a class="nav-link text-dark position-relative" asp-controller="Profile" asp-action="Index">
            <i class="bi bi-person-circle"></i> @username
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="profile-notifications-badge" style="display: none;">
                0
            </span>
        </a>
    </li>
    <li class="nav-item">
        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-link nav-link text-dark" style="padding:0;">
                <i class="bi bi-box-arrow-right"></i> Logout
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
    </li>
}
</ul>

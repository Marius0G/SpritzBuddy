@model SpritzBuddy.Models.Post
@using System.Security.Claims

<div class="col-md-6 col-lg-4 mb-4">
    <div class="card h-100">
        <!-- Post Images (if any) -->
        @if (Model.PostMedias != null && Model.PostMedias.Any())
        {
            var firstImage = Model.PostMedias.OrderBy(pm => pm.OrderIndex).FirstOrDefault();
            if (firstImage != null)
            {
                <div class="position-relative" style="cursor: pointer;" onclick="window.location.href='@Url.Action("Details", "Posts", new { id = Model.Id })'">
                    @if (firstImage.MediaType == SpritzBuddy.Models.PostMediaType.Video)
                    {
                        <video class="card-img-top" style="height: 200px; object-fit: cover; background-color: #000;">
                            <source src="@firstImage.FilePath" type="video/mp4">
                        </video>
                        <div class="position-absolute top-50 start-50 translate-middle text-white opacity-75">
                            <i class="bi bi-play-circle-fill" style="font-size: 3rem;"></i>
                        </div>
                    }
                    else
                    {
                        <img src="@firstImage.FilePath" 
                             class="card-img-top" 
                             alt="Post image"
                             style="height: 200px; object-fit: cover;" />
                    }
                    
                    @if (Model.PostMedias.Count > 1)
                    {
                        <div class="position-absolute top-0 end-0 m-2">
                            <span class="badge bg-dark bg-opacity-75">
                                <i class="bi bi-collection-play"></i> @Model.PostMedias.Count
                            </span>
                        </div>
                    }
                </div>
            }
        }
        
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@(Model.Content.Length > 100 ? Model.Content.Substring(0, 100) + "..." : Model.Content)
            </p>
            <small class="text-muted">
                By @Model.User.FirstName @Model.User.LastName on
                @Model.CreateDate.ToString("MMM dd, yyyy")
            </small>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="btn-group">
                    <a asp-controller="Posts" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info btn-sm">Details</a>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
                        if (userId != null && int.TryParse(userId, out int userIdInt) && Model.UserId == userIdInt)
                        {
                            <a asp-controller="Posts" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-controller="Posts" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-sm">Delete</a>
                        }
                    }
                </div>
            </div>
            
            <div class="d-flex justify-content-between align-items-center">
                <!-- Like Section -->
                <div class="like-section" data-post-id="@Model.Id">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <button type="button" class="btn btn-outline-danger btn-sm like-btn" data-post-id="@Model.Id">
                            <i class="bi bi-heart like-icon"></i>
                            <span class="like-count">0</span>
                        </button>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-heart"></i>
                            <span class="like-count">0</span>
                        </a>
                    }
                </div>

                <!-- Comment Section -->
                <div class="comment-section" data-post-id="@Model.Id">
                    <a asp-controller="Posts" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-chat-fill"></i>
                        <span class="comment-count">0</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

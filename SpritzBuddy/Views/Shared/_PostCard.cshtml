@model SpritzBuddy.Models.Post
@using System.Security.Claims

<div class="card mb-4 shadow-sm">
    <div class="row g-0">
        <!-- Media Column: Order 2 on Mobile (Bottom), Order 1 on Desktop (Left) -->
        <div class="col-md-7 order-2 order-md-1 bg-black d-flex align-items-center justify-content-center" style="min-height: 300px; background-color: #f8f9fa;">
            @if (Model.PostMedias != null && Model.PostMedias.Any())
            {
                var mediaList = Model.PostMedias.OrderBy(pm => pm.OrderIndex).ToList();
                var carouselId = $"instagram-carousel-{Model.Id}";

                <div class="instagram-carousel" id="@carouselId" style="width: 100%; height: 100%; position: relative; background-color: #000;">
                    <!-- Images Container -->
                    <div class="instagram-carousel-images" style="width: 100%; height: 100%; position: relative; overflow: hidden;">
                        @for (int i = 0; i < mediaList.Count; i++)
                        {
                            var media = mediaList[i];
                            <div class="instagram-carousel-item @(i == 0 ? "active" : "")" 
                                 style="display: @(i == 0 ? "flex" : "none"); width: 100%; height: 100%; align-items: center; justify-content: center; position: absolute; top: 0; left: 0;">
                                <a href="@Url.Action("Details", "Posts", new { id = Model.Id })" class="d-block h-100 w-100 d-flex align-items-center justify-content-center text-decoration-none">
                                    @if (media.MediaType == SpritzBuddy.Models.PostMediaType.Video)
                                    {
                                        <div style="position: relative; width: 100%; height: 100%; display: flex; align-items: center; justify-content: center;">
                                            <video style="max-width: 100%; max-height: 500px; object-fit: contain;">
                                                <source src="@media.FilePath" type="video/mp4">
                                            </video>
                                            <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); color: white; opacity: 0.75;">
                                                <i class="bi bi-play-circle-fill" style="font-size: 3rem;"></i>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <img src="@media.FilePath" alt="Post Image" style="max-width: 100%; max-height: 500px; object-fit: contain;">
                                    }
                                </a>
                            </div>
                        }
                    </div>

                    @if (mediaList.Count > 1)
                    {
                        <!-- Previous Arrow -->
                        <button class="instagram-arrow instagram-arrow-prev" onclick="instagramCarousel('@carouselId', 'prev'); return false;" 
                                style="position: absolute; left: 8px; top: 50%; transform: translateY(-50%); z-index: 100; background: rgba(255, 255, 255, 0.7); border: none; border-radius: 50%; width: 32px; height: 32px; cursor: pointer; display: flex; align-items: center; justify-content: center; box-shadow: 0 1px 4px rgba(0,0,0,0.3); transition: all 0.2s; opacity: 0.6;">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#000" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="15 18 9 12 15 6"></polyline>
                            </svg>
                        </button>

                        <!-- Next Arrow -->
                        <button class="instagram-arrow instagram-arrow-next" onclick="instagramCarousel('@carouselId', 'next'); return false;"
                                style="position: absolute; right: 8px; top: 50%; transform: translateY(-50%); z-index: 100; background: rgba(255, 255, 255, 0.7); border: none; border-radius: 50%; width: 32px; height: 32px; cursor: pointer; display: flex; align-items: center; justify-content: center; box-shadow: 0 1px 4px rgba(0,0,0,0.3); transition: all 0.2s; opacity: 0.6;">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#000" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="9 18 15 12 9 6"></polyline>
                            </svg>
                        </button>

                        <!-- Indicators -->
                        <div class="instagram-indicators" style="position: absolute; bottom: 12px; left: 50%; transform: translateX(-50%); z-index: 100; display: flex; gap: 5px;">
                            @for (int i = 0; i < mediaList.Count; i++)
                            {
                                <div class="instagram-indicator @(i == 0 ? "active" : "")" 
                                     style="width: 6px; height: 6px; border-radius: 50%; background: @(i == 0 ? "rgba(255,255,255,0.9)" : "rgba(255,255,255,0.4)"); transition: all 0.3s; cursor: pointer;"
                                     onclick="instagramCarousel('@carouselId', @i); return false;"></div>
                            }
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="d-flex align-items-center justify-content-center h-100 text-muted p-5">
                    <div class="text-center">
                        <i class="bi bi-card-image display-4"></i>
                        <p class="mt-2">No media</p>
                    </div>
                </div>
            }
        </div>

        <!-- Content Column: Order 1 on Mobile (Top), Order 2 on Desktop (Right) -->
        <div class="col-md-5 order-1 order-md-2 d-flex flex-column border-start">
            <div class="card-body d-flex flex-column h-100">
                <!-- User Header -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="d-flex align-items-center">
                        @if (!string.IsNullOrEmpty(Model.User.ProfilePictureUrl))
                        {
                            <img src="@Model.User.ProfilePictureUrl" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;" alt="@Model.User.FirstName" />
                        }
                        else
                        {
                            <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                @((Model.User.FirstName ?? "U")[0])
                            </div>
                        }
                        <div>
                            <h6 class="mb-0 small">@Model.User.FirstName @Model.User.LastName</h6>
                            <small class="text-muted" style="font-size: 0.75rem;">@Model.CreateDate.ToString("MMM dd")</small>
                        </div>
                    </div>
                    
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
                        if (userId != null && int.TryParse(userId, out int userIdInt) && Model.UserId == userIdInt)
                        {
                            <div class="dropdown">
                                <button class="btn btn-link btn-sm text-muted p-0" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-controller="Posts" asp-action="Edit" asp-route-id="@Model.Id">Edit</a></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Posts" asp-action="Delete" asp-route-id="@Model.Id">Delete</a></li>
                                </ul>
                            </div>
                        }
                    }
                </div>

                <!-- Post Text -->
                <h5 class="card-title">
                    <a asp-controller="Posts" asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none text-dark">
                        @Model.Title
                    </a>
                </h5>
                <p class="card-text flex-grow-1">
                    @(Model.Content.Length > 150 ? Model.Content.Substring(0, 150) + "..." : Model.Content)
                </p>

                <!-- Actions Footer (Pinned to bottom of text column) -->
                <div class="mt-auto pt-3 border-top">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="like-section" data-post-id="@Model.Id">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <button type="button" class="btn btn-outline-danger btn-sm like-btn border-0" data-post-id="@Model.Id">
                                    <i class="bi bi-heart like-icon" style="font-size: 1.2rem;"></i>
                                </button>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-danger btn-sm border-0">
                                    <i class="bi bi-heart" style="font-size: 1.2rem;"></i>
                                </a>
                            }
                            <span class="small fw-bold like-count">0</span> <small class="text-muted">likes</small>
                        </div>

                        <div class="comment-section" data-post-id="@Model.Id">
                            <a asp-controller="Posts" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-sm border-0">
                                <i class="bi bi-chat-bubble" style="font-size: 1.2rem;"></i>
                            </a>
                            <span class="small fw-bold comment-count">0</span> <small class="text-muted">comments</small>
                        </div>
                        
                        <div>
                             <a asp-controller="Posts" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                Read
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .instagram-arrow:hover {
        background: rgba(255, 255, 255, 0.95) !important;
        opacity: 1 !important;
    }
    
    .instagram-indicator:hover {
        background: rgba(255, 255, 255, 0.9) !important;
        transform: scale(1.15);
    }
</style>

<script>
function instagramCarousel(carouselId, action) {
    const carousel = document.getElementById(carouselId);
    if (!carousel) return;
    
    const items = carousel.querySelectorAll('.instagram-carousel-item');
    const indicators = carousel.querySelectorAll('.instagram-indicator');
    
    let currentIndex = -1;
    items.forEach((item, index) => {
        if (item.classList.contains('active')) {
            currentIndex = index;
        }
    });
    
    let newIndex = currentIndex;
    
    if (action === 'prev') {
        newIndex = currentIndex - 1;
        if (newIndex < 0) newIndex = items.length - 1;
    } else if (action === 'next') {
        newIndex = currentIndex + 1;
        if (newIndex >= items.length) newIndex = 0;
    } else if (typeof action === 'number') {
        newIndex = action;
    }
    
    if (newIndex === currentIndex) return;
    
    // Hide current
    items[currentIndex].classList.remove('active');
    items[currentIndex].style.display = 'none';
    indicators[currentIndex].classList.remove('active');
    indicators[currentIndex].style.background = 'rgba(255,255,255,0.5)';
    
    // Show new
    items[newIndex].classList.add('active');
    items[newIndex].style.display = 'flex';
    indicators[newIndex].classList.add('active');
    indicators[newIndex].style.background = 'white';
}
</script>
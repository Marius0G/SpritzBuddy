@model IEnumerable<SpritzBuddy.Models.Post>

@{
    ViewData["Title"] = "My Liked Posts";
}

<h2>Posts I've Liked</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.Any())
{
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text">@(post.Content.Length > 100 ? post.Content.Substring(0, 100) + "..." : post.Content)</p>
                        <small class="text-muted">
                            By @post.User.FirstName @post.User.LastName on @post.CreateDate.ToString("MMM dd, yyyy")
                        </small>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <div>
                                <a asp-controller="Posts" asp-action="Details" asp-route-id="@post.Id" class="btn btn-info btn-sm">View Post</a>
                                <a asp-controller="Likes" asp-action="PostLikes" asp-route-id="@post.Id" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-heart-fill"></i> Likes
                                </a>
                            </div>
                            <form asp-action="RemoveFromUserLikes" method="post" class="d-inline">
                                <input type="hidden" name="postId" value="@post.Id" />
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Remove this post from your liked posts?')">
                                    <i class="bi bi-heart"></i> Unlike
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <h4>No liked posts yet</h4>
        <p>When you like posts, they'll appear here.</p>
        <a asp-controller="Posts" asp-action="Index" class="btn btn-primary">Explore Posts</a>
    </div>
}

<div class="mt-3">
    <a asp-controller="Posts" asp-action="Index" class="btn btn-secondary">Back to All Posts</a>
</div>
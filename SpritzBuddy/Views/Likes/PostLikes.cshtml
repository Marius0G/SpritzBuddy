@model IEnumerable<SpritzBuddy.Models.Like>

@{
    ViewData["Title"] = "Post Likes";
    var post = ViewBag.Post as SpritzBuddy.Models.Post;
}

<h2>People who liked this post</h2>

@if (post != null)
{
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">@post.Title</h5>
            <p class="card-text">@(post.Content.Length > 100 ? post.Content.Substring(0, 100) + "..." : post.Content)</p>
            <small class="text-muted">By @post.User.FirstName @post.User.LastName</small>
        </div>
    </div>
}

@if (Model.Any())
{
    <div class="row">
        @foreach (var like in Model)
        {
            <div class="col-md-4 col-sm-6 mb-3">
                <div class="card">
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(like.User.ProfilePictureUrl))
                        {
                            <img src="@like.User.ProfilePictureUrl" alt="Profile" class="rounded-circle mb-2" width="60" height="60" />
                        }
                        else
                        {
                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mx-auto mb-2" style="width: 60px; height: 60px;">
                                @like.User.FirstName.Substring(0, 1)@like.User.LastName.Substring(0, 1)
                            </div>
                        }
                        <h6 class="card-title">@like.User.FirstName @like.User.LastName</h6>
                        @if (!string.IsNullOrEmpty(like.User.Description))
                        {
                            <p class="card-text small text-muted">@(like.User.Description.Length > 50 ? like.User.Description.Substring(0, 50) + "..." : like.User.Description)</p>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <p>No one has liked this post yet.</p>
    </div>
}

<div class="mt-3">
    <a asp-controller="Posts" asp-action="Details" asp-route-id="@post?.Id" class="btn btn-secondary">Back to Post</a>
    <a asp-controller="Posts" asp-action="Index" class="btn btn-primary">All Posts</a>
</div>
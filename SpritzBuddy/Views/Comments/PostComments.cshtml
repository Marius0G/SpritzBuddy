@model IEnumerable<SpritzBuddy.Models.Comment>
@using System.Security.Claims

@{
    ViewData["Title"] = "Post Comments";
    var post = ViewBag.Post as SpritzBuddy.Models.Post;
    var currentUserId = 0;
    var userIdString = User.FindFirstValue(ClaimTypes.NameIdentifier);
    if (userIdString != null && int.TryParse(userIdString, out int parsedUserId))
    {
        currentUserId = parsedUserId;
    }
}

<h2>Comments on Post</h2>

@if (post != null)
{
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">@post.Title</h5>
            <p class="card-text">@(post.Content.Length > 200 ? post.Content.Substring(0, 200) + "..." : post.Content)</p>
            <small class="text-muted">By @post.User.FirstName @post.User.LastName on @post.CreateDate.ToString("MMM dd, yyyy")</small>
        </div>
    </div>
}

<div class="mb-4">
    <h4>All Comments (@Model.Count())</h4>
</div>

@if (Model.Any())
{
    <div class="list-group">
        @foreach (var comment in Model)
        {
            <div class="list-group-item comment-item" data-comment-id="@comment.Id">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1">
                        <h6 class="mb-1">@comment.User.FirstName @comment.User.LastName</h6>
                        
                        <!-- View Mode -->
                        <div class="comment-view-mode">
                            <p class="mb-1 comment-content">@comment.Content</p>
                            <small class="text-muted">@comment.CreateDate.ToString("MMM dd, yyyy HH:mm")</small>
                        </div>
                        
                        <!-- Edit Mode (hidden by default) -->
                        <div class="comment-edit-mode" style="display: none;">
                            <textarea class="form-control mb-2 edit-comment-textarea" rows="3" maxlength="1000">@comment.Content</textarea>
                            <button type="button" class="btn btn-sm btn-primary save-edit-btn">Save</button>
                            <button type="button" class="btn btn-sm btn-secondary cancel-edit-btn">Cancel</button>
                        </div>
                    </div>
                    @if (currentUserId == comment.UserId)
                    {
                        <div class="btn-group comment-actions">
                            <button type="button" class="btn btn-sm btn-outline-primary edit-btn">Edit</button>
                            <button type="button" class="btn btn-sm btn-outline-danger delete-btn">Delete</button>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <p>No comments yet. Be the first to comment!</p>
    </div>
}

<div class="mt-3">
    <a asp-controller="Posts" asp-action="Details" asp-route-id="@post?.Id" class="btn btn-secondary">Back to Post</a>
    <a asp-controller="Posts" asp-action="Index" class="btn btn-primary">All Posts</a>
</div>

@section Scripts {
    @Html.AntiForgeryToken()
    
    <script>
        $(document).ready(function() {
            // Handle edit button click
            $('.edit-btn').on('click', function() {
                var commentItem = $(this).closest('.comment-item');
                showEditMode(commentItem);
            });

            // Handle cancel edit button
            $('.cancel-edit-btn').on('click', function() {
                var commentItem = $(this).closest('.comment-item');
                hideEditMode(commentItem);
            });

            // Handle save edit button
            $('.save-edit-btn').on('click', function() {
                var commentItem = $(this).closest('.comment-item');
                var commentId = commentItem.data('comment-id');
                var newContent = commentItem.find('.edit-comment-textarea').val().trim();
                
                if (newContent === '') {
                    alert('Comment cannot be empty');
                    return;
                }
                
                saveCommentEdit(commentId, newContent, commentItem);
            });

            // Handle delete button click
            $('.delete-btn').on('click', function() {
                var commentItem = $(this).closest('.comment-item');
                var commentId = commentItem.data('comment-id');
                deleteComment(commentId);
            });
        });

        function showEditMode(commentItem) {
            commentItem.find('.comment-view-mode').hide();
            commentItem.find('.comment-edit-mode').show();
            commentItem.find('.comment-actions').hide();
        }

        function hideEditMode(commentItem) {
            commentItem.find('.comment-view-mode').show();
            commentItem.find('.comment-edit-mode').hide();
            commentItem.find('.comment-actions').show();
            
            // Reset textarea to original content
            var originalContent = commentItem.find('.comment-content').text();
            commentItem.find('.edit-comment-textarea').val(originalContent);
        }

        function saveCommentEdit(commentId, newContent, commentItem) {
            $.post('/Comments/Edit', {
                id: commentId,
                content: newContent,
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
            })
            .done(function(data) {
                if (data.success) {
                    // Update the comment content in the view
                    commentItem.find('.comment-content').text(newContent);
                    hideEditMode(commentItem);
                    
                    // Show success message
                    showSuccessMessage('Comment updated successfully');
                } else {
                    alert(data.message || 'Error updating comment');
                }
            })
            .fail(function() {
                alert('Error occurred while updating comment');
            });
        }

        function deleteComment(commentId) {
            if (!confirm('Are you sure you want to delete this comment?')) {
                return;
            }

            $.post('/Comments/Delete', {
                id: commentId,
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
            })
            .done(function(data) {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Error deleting comment');
                }
            })
            .fail(function() {
                alert('Error occurred while deleting comment');
            });
        }

        function showSuccessMessage(message) {
            // Create a temporary success alert
            var alertHtml = '<div class="alert alert-success alert-dismissible fade show" role="alert">' +
                            message +
                            '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
                            '</div>';
            
            // Insert at the top of the page
            $('h2').after(alertHtml);
            
            // Auto-dismiss after 3 seconds
            setTimeout(function() {
                $('.alert-success').fadeOut('slow', function() {
                    $(this).remove();
                });
            }, 3000);
        }
    </script>
}
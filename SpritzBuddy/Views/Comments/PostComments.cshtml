@model IEnumerable<SpritzBuddy.Models.Comment>
@using System.Security.Claims
@using Microsoft.AspNetCore.Identity
@inject SignInManager<SpritzBuddy.Models.ApplicationUser> SignInManager
@inject UserManager<SpritzBuddy.Models.ApplicationUser> UserManager

@{
    ViewData["Title"] = "Post";
    var post = ViewBag.Post as SpritzBuddy.Models.Post;
    var currentUser = await UserManager.GetUserAsync(User);
    var currentUserId = currentUser?.Id ?? 0;
    
    var userPosts = ViewBag.UserPosts as List<SpritzBuddy.Models.Post> ?? new List<SpritzBuddy.Models.Post>();
    var currentIndex = ViewBag.CurrentPostIndex as int? ?? 0;
}

<div class="container" style="max-width: 935px;">
    <div class="py-5">
        <div class="mb-4 d-flex justify-content-between align-items-center">
            <a asp-controller="Home" asp-action="Index" class="btn btn-link text-dark ps-0">
                <i class="bi bi-arrow-left"></i> Back to Feed
            </a>
            
            @if (userPosts.Count > 1)
            {
                <div class="d-flex gap-2 align-items-center">
                    @if (currentIndex > 0)
                    {
                        <a href="@Url.Action("PostComments", new { id = userPosts[currentIndex - 1].Id })" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    }
                    <span class="text-muted small">@(currentIndex + 1) / @userPosts.Count</span>
                    @if (currentIndex < userPosts.Count - 1)
                    {
                        <a href="@Url.Action("PostComments", new { id = userPosts[currentIndex + 1].Id })" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    }
                </div>
            }
        </div>

        @if (post != null)
        {
            <div class="row g-3">
                <!-- Left side: Post Media OR Content -->
                @if (post.PostMedias != null && post.PostMedias.Any())
                {
                    <div class="col-md-7">
                        <div class="card shadow-sm" style="border-radius: 8px;">
                            @{
                                var firstMedia = post.PostMedias.First();
                            }
                            @if (firstMedia.MediaType == SpritzBuddy.Models.PostMediaType.Image)
                            {
                                <img src="@firstMedia.FilePath" style="width: 100%; height: auto; display: block; border-radius: 8px;" alt="Post image" />
                            }
                            else if (firstMedia.MediaType == SpritzBuddy.Models.PostMediaType.Video)
                            {
                                <video controls style="width: 100%; height: auto; display: block; border-radius: 8px;">
                                    <source src="@firstMedia.FilePath" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-md-6">
                        <div class="card shadow-sm" style="border-radius: 8px; height: 700px; display: flex; align-items: center;">
                            <div class="p-4 w-100">
                                @if (!string.IsNullOrEmpty(post.Title))
                                {
                                    <h3 class="fw-bold mb-3">@post.Title</h3>
                                }
                                <p class="fs-4 mb-0" style="line-height: 1.8; word-wrap: break-word;">@post.Content</p>
                            </div>
                        </div>
                    </div>
                }

                <!-- Right side: Post info and Comments -->
                <div class="col-md-5">
                    <div class="card shadow-sm" style="display: flex; flex-direction: column; height: 700px; border-radius: 8px;">
                        <!-- Post Header -->
                        <div class="border-bottom p-3">
                            <div class="d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(post.User.ProfilePictureUrl))
                                {
                                    <img src="@post.User.ProfilePictureUrl" class="rounded-circle me-3" style="width: 40px; height: 40px; object-fit: cover;" alt="@post.User.FirstName" />
                                }
                                else
                                {
                                    <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px; font-size: 1.2rem;">
                                        @((post.User.FirstName ?? "U")[0])
                                    </div>
                                }
                                <div>
                                    <a asp-controller="Profile" asp-action="Index" asp-route-username="@post.User.UserName" class="fw-bold text-decoration-none text-dark">
                                        @("@" + post.User.UserName)
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="flex-grow-1 overflow-auto p-3" style="min-height: 300px;">
                            <!-- Only show original post content in right column if there is media -->
                            @if (post.PostMedias != null && post.PostMedias.Any())
                            {
                                <div class="mb-3">
                                    <div class="d-flex">
                                        @if (!string.IsNullOrEmpty(post.User.ProfilePictureUrl))
                                        {
                                            <img src="@post.User.ProfilePictureUrl" class="rounded-circle me-3" style="width: 32px; height: 32px; object-fit: cover;" alt="@post.User.FirstName" />
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-3" style="width: 32px; height: 32px; font-size: 0.9rem;">
                                                @((post.User.FirstName ?? "U")[0])
                                            </div>
                                        }
                                        <div>
                                            <div>
                                                @if (!string.IsNullOrEmpty(post.Title))
                                                {
                                                    <span class="fw-bold d-block mb-1">@post.Title</span>
                                                }
                                                <span>@post.Content</span>
                                            </div>
                                            <div class="text-muted small mt-1">
                                                @{
                                                    var postTimeSpan = DateTime.UtcNow - post.CreateDate;
                                                    string postTimeAgo;
                                                    if (postTimeSpan.TotalMinutes < 1)
                                                        postTimeAgo = "just now";
                                                    else if (postTimeSpan.TotalMinutes < 60)
                                                        postTimeAgo = $"{(int)postTimeSpan.TotalMinutes}m ago";
                                                    else if (postTimeSpan.TotalHours < 24)
                                                        postTimeAgo = $"{(int)postTimeSpan.TotalHours}h ago";
                                                    else if (postTimeSpan.TotalDays < 7)
                                                        postTimeAgo = $"{(int)postTimeSpan.TotalDays}d ago";
                                                    else if (postTimeSpan.TotalDays < 30)
                                                        postTimeAgo = $"{(int)(postTimeSpan.TotalDays / 7)}w ago";
                                                    else
                                                        postTimeAgo = post.CreateDate.ToString("MMM d, yyyy");
                                                }
                                                @postTimeAgo
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- All Comments -->
                            @if (Model.Any())
                            {
                                @foreach (var comment in Model)
                                {
                                    var commentTimeSpan = DateTime.UtcNow - comment.CreateDate;
                                    string commentTimeAgo;
                                    if (commentTimeSpan.TotalMinutes < 1)
                                        commentTimeAgo = "just now";
                                    else if (commentTimeSpan.TotalMinutes < 60)
                                        commentTimeAgo = $"{(int)commentTimeSpan.TotalMinutes}m ago";
                                    else if (commentTimeSpan.TotalHours < 24)
                                        commentTimeAgo = $"{(int)commentTimeSpan.TotalHours}h ago";
                                    else if (commentTimeSpan.TotalDays < 7)
                                        commentTimeAgo = $"{(int)commentTimeSpan.TotalDays}d ago";
                                    else if (commentTimeSpan.TotalDays < 30)
                                        commentTimeAgo = $"{(int)(commentTimeSpan.TotalDays / 7)}w ago";
                                    else
                                        commentTimeAgo = comment.CreateDate.ToString("MMM d");

                                    var isOwner = currentUserId == comment.UserId;
                                    
                                    <div class="mb-3 comment-item" data-comment-id="@comment.Id" style="cursor: pointer; position: relative;">
                                        <div class="d-flex">
                                            @if (!string.IsNullOrEmpty(comment.User.ProfilePictureUrl))
                                            {
                                                <img src="@comment.User.ProfilePictureUrl" class="rounded-circle me-3" style="width: 32px; height: 32px; object-fit: cover;" alt="@comment.User.FirstName" />
                                            }
                                            else
                                            {
                                                <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-3" style="width: 32px; height: 32px; font-size: 0.9rem;">
                                                    @((comment.User.FirstName ?? "U")[0])
                                                </div>
                                            }
                                            <div class="flex-grow-1">
                                                <!-- View Mode -->
                                                <div class="comment-view-mode">
                                                    <div>
                                                        <a asp-controller="Profile" asp-action="Index" asp-route-username="@comment.User.UserName" class="fw-bold text-decoration-none text-dark me-2">
                                                            @("@" + comment.User.UserName)
                                                        </a>
                                                        <span class="comment-content">@comment.Content</span>
                                                    </div>
                                                    <div class="text-muted small mt-1 d-flex align-items-center gap-2">
                                                        <span>@commentTimeAgo</span>
                                                        @if (isOwner)
                                                        {
                                                            <span class="text-primary" style="cursor: pointer;" onclick="startEditComment(@comment.Id, event)">Edit</span>
                                                            <span class="text-danger" style="cursor: pointer;" onclick="deleteComment(@comment.Id, event)">Delete</span>
                                                        }
                                                    </div>
                                                </div>
                                                
                                                <!-- Edit Mode (Hidden by default) -->
                                                <div class="comment-edit-mode" style="display: none;">
                                                    <textarea class="form-control form-control-sm mb-2 comment-edit-textarea" rows="2">@comment.Content</textarea>
                                                    <button class="btn btn-primary btn-sm me-2" onclick="saveEditComment(@comment.Id, event)">Save</button>
                                                    <button class="btn btn-secondary btn-sm" onclick="cancelEditComment(@comment.Id, event)">Cancel</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center text-muted py-4">
                                    <p>No comments yet.</p>
                                    <p class="small">Be the first to comment!</p>
                                </div>
                            }
                        </div>

                        <!-- Post Actions -->
                        <div class="border-top p-3">
                            <div class="d-flex align-items-center mb-2">
                                @if (SignInManager.IsSignedIn(User))
                                {
                                    var userHasLiked = currentUser != null && post.Likes.Any(l => l.UserId == currentUser.Id);
                                    <button type="button" 
                                            class="btn btn-link p-0 me-3 noroc-btn @(userHasLiked ? "liked" : "")" 
                                            data-post-id="@post.Id"
                                            style="font-size: 1.5rem;">
                                        <i class="bi bi-cup-straw"></i>
                                        <span class="noroc-text ms-1">Noroc!</span>
                                    </button>
                                }
                                else
                                {
                                    <span class="me-3 text-muted" style="font-size: 1.5rem;">
                                        <i class="bi bi-cup-straw"></i>
                                        <span class="ms-1">Noroc!</span>
                                    </span>
                                }
                            </div>

                            @if (post.Likes.Any())
                            {
                                <div class="fw-bold mb-2 noroc-count" data-post-id="@post.Id">
                                    <span class="count-value">@post.Likes.Count</span> @(post.Likes.Count == 1 ? "Noroc" : "Noroc-uri")
                                </div>
                            }
                            else
                            {
                                <div class="fw-bold mb-2 noroc-count" data-post-id="@post.Id" style="display: none;">
                                    <span class="count-value">0</span> Noroc-uri
                                </div>
                            }

                            <!-- Drink Tags -->
                            @if (post.PostDrinks != null && post.PostDrinks.Any())
                            {
                                <div class="mb-2 drink-tags-container">
                                    @foreach (var postDrink in post.PostDrinks)
                                    {
                                        <span class="drink-tag" style="background-color: @(postDrink.Drink.ColorHex ?? "#6c757d");">
                                            <i class="bi bi-cup-straw"></i> @postDrink.Drink.Name
                                        </span>
                                    }
                                </div>
                            }

                            <div class="text-muted small mb-2">
                                @post.CreateDate.ToString("MMMM d, yyyy")
                            </div>

                            <!-- Add Comment -->
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <form asp-controller="Comments" asp-action="Create" method="post" class="d-flex border-top pt-3">
                                    <input type="hidden" name="postId" value="@post.Id" />
                                    <input type="text" name="content" class="form-control border-0" placeholder="Add a comment..." required style="box-shadow: none;" />
                                    <button type="submit" class="btn btn-link text-primary fw-bold">Post</button>
                                </form>
                            }
                            else
                            {
                                <div class="text-center text-muted border-top pt-3">
                                    <a asp-controller="Account" asp-action="Login" class="text-primary">Log in</a> to like or comment
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4 text-center text-muted small">
                <p class="mb-0">© 2026 SpritzBuddy · <a href="#" class="text-muted">About</a> · <a href="#" class="text-muted">Help</a> · <a href="#" class="text-muted">Privacy</a> · <a href="#" class="text-muted">Terms</a></p>
            </div>
        }
    </div>
</div>

<style>
    .btn-link:hover {
        text-decoration: none;
    }
    /* Drink tags styling */
    .drink-tags-container {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
    }
    .drink-tag {
        display: inline-flex;
        align-items: center;
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 0.85rem;
        font-weight: 500;
        color: white;
        text-shadow: 0 1px 2px rgba(0,0,0,0.2);
    }
    .drink-tag i {
        margin-right: 4px;
        font-size: 0.9rem;
    }
    .overflow-auto::-webkit-scrollbar {
        width: 8px;
    }
    .overflow-auto::-webkit-scrollbar-track {
        background: #f1f1f1;
    }
    .overflow-auto::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 4px;
    }
    .overflow-auto::-webkit-scrollbar-thumb:hover {
        background: #555;
    }
    /* Aspect ratio constraints for post detail */
    .col-md-7 img,
    .col-md-7 video {
        max-width: 100%;
        max-height: 700px;
    }
    /* Center media vertically and horizontally */
    .col-md-7 {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    /* Noroc button styling - Beer Theme */
    .noroc-btn {
        color: var(--beer-dark, #6B4423);
        text-decoration: none;
        transition: all 0.2s ease;
        border: none;
        background: none;
        outline: none !important;
        box-shadow: none !important;
    }
    .noroc-btn:hover {
        color: var(--beer-gold, #D4A017);
        transform: scale(1.1);
        background: none !important;
    }
    .noroc-btn:focus {
        outline: none !important;
        box-shadow: none !important;
        background: none !important;
    }
    .noroc-btn:active {
        background: none !important;
        box-shadow: none !important;
    }
    .noroc-btn.liked {
        color: var(--beer-amber, #C68E17);
        font-weight: bold;
    }
    .noroc-btn.liked:hover {
        color: var(--beer-dark, #6B4423);
    }
    .noroc-text {
        font-size: 0.9rem;
        vertical-align: middle;
    }
    /* Click animation */
    @@keyframes noroc-pulse {
        0% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.3) rotate(15deg);
        }
        100% {
            transform: scale(1);
        }
    }
    .noroc-btn.animate {
        animation: noroc-pulse 0.5s ease;
    }
    
    /* Comment item styling - Beer Theme */
    .comment-item {
        padding: 8px;
        border-radius: 8px;
        transition: background-color 0.2s ease;
    }
    .comment-item:hover {
        background-color: var(--beer-foam, #FFF8DC);
    }
    .comment-edit-textarea {
        resize: vertical;
        min-height: 60px;
        border-color: var(--beer-light, #F5DEB3);
    }
    .comment-edit-textarea:focus {
        border-color: var(--beer-amber, #C68E17);
        box-shadow: 0 0 0 0.2rem rgba(212, 160, 23, 0.25);
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Handle Noroc button clicks
            document.querySelectorAll('.noroc-btn').forEach(button => {
                button.addEventListener('click', async function(e) {
                    e.preventDefault();
                    const postId = this.getAttribute('data-post-id');
                    
                    try {
                        const response = await fetch('@Url.Action("ToggleLike", "Posts")?id=' + postId, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                            }
                        });

                        if (response.ok) {
                            const data = await response.json();
                            
                            // Add animation class
                            this.classList.add('animate');
                            setTimeout(() => {
                                this.classList.remove('animate');
                            }, 500);
                            
                            // Toggle the button appearance
                            this.classList.toggle('liked');
                            
                            // Update the like count
                            const countElement = document.querySelector(`.noroc-count[data-post-id="${postId}"]`);
                            const countValue = countElement.querySelector('.count-value');
                            countValue.textContent = data.likeCount;
                            
                            // Update the text (Noroc vs Noroc-uri)
                            const countText = data.likeCount === 1 ? 'Noroc' : 'Noroc-uri';
                            countElement.innerHTML = `<span class="count-value">${data.likeCount}</span> ${countText}`;
                            
                            // Show/hide the count element
                            if (data.likeCount > 0) {
                                countElement.style.display = 'block';
                            } else {
                                countElement.style.display = 'none';
                            }
                        }
                    } catch (error) {
                        console.error('Error toggling like:', error);
                    }
                });
            });
        });

        // Start editing a comment
        function startEditComment(commentId, event) {
            event.stopPropagation();
            const commentItem = document.querySelector(`.comment-item[data-comment-id="${commentId}"]`);
            commentItem.querySelector('.comment-view-mode').style.display = 'none';
            commentItem.querySelector('.comment-edit-mode').style.display = 'block';
        }

        // Cancel editing a comment
        function cancelEditComment(commentId, event) {
            event.stopPropagation();
            const commentItem = document.querySelector(`.comment-item[data-comment-id="${commentId}"]`);
            commentItem.querySelector('.comment-view-mode').style.display = 'block';
            commentItem.querySelector('.comment-edit-mode').style.display = 'none';
            
            // Reset textarea to original content
            const originalContent = commentItem.querySelector('.comment-content').textContent;
            commentItem.querySelector('.comment-edit-textarea').value = originalContent;
        }

        // Save edited comment
        async function saveEditComment(commentId, event) {
            event.stopPropagation();
            const commentItem = document.querySelector(`.comment-item[data-comment-id="${commentId}"]`);
            const newContent = commentItem.querySelector('.comment-edit-textarea').value.trim();
            
            if (newContent === '') {
                alert('Comment cannot be empty');
                return;
            }
            
            try {
                const formData = new FormData();
                formData.append('id', commentId);
                formData.append('content', newContent);
                formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);

                const response = await fetch('@Url.Action("Edit", "Comments")', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();
                
                if (result.success) {
                    // Update the comment content in the view
                    commentItem.querySelector('.comment-content').textContent = newContent;
                    cancelEditComment(commentId, event);
                } else {
                    alert(result.message || 'Eroare la editarea comentariului');
                }
            } catch (error) {
                console.error('Error editing comment:', error);
                alert('Eroare la editarea comentariului');
            }
        }

        // Delete comment
        async function deleteComment(commentId, event) {
            event.stopPropagation();
            
            if (!confirm('Ești sigur că vrei să ștergi acest comentariu?')) {
                return;
            }
            
            try {
                const formData = new FormData();
                formData.append('id', commentId);
                formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);

                const response = await fetch('@Url.Action("Delete", "Comments")', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();
                
                if (result.success) {
                    // Remove the comment from the DOM
                    const commentItem = document.querySelector(`.comment-item[data-comment-id="${commentId}"]`);
                    commentItem.remove();
                    
                    // Check if there are no more comments
                    const commentsContainer = document.querySelector('.overflow-auto');
                    if (commentsContainer.querySelectorAll('.comment-item').length === 0) {
                        commentsContainer.innerHTML = `
                            <div class="text-center text-muted py-4">
                                <p>No comments yet.</p>
                                <p class="small">Be the first to comment!</p>
                            </div>
                        `;
                    }
                } else {
                    alert(result.message || 'Eroare la ștergerea comentariului');
                }
            } catch (error) {
                console.error('Error deleting comment:', error);
                alert('Eroare la ștergerea comentariului');
            }
        }
    </script>
}
